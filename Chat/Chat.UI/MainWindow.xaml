<Window x:Class="Chat.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="chatTextB" Text="Chat" FontSize="30" Grid.Row="0"/>
        <TextBlock x:Name="chatTimeTB" Text="time" FontSize="30" Grid.Row="0" Grid.Column="1"/>
        <TextBox x:Name="messageTB" Text="Введите сообщение" FontSize="30" Padding="20,0,0,0" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Button x:Name="button" Content=">" FontSize="50" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
